{
  "name": "static-analysis",
  "description": "Static analysis tool for c/c++",
  "version": "0.0.1",
  "private": true,
  "repository": "https://github.com/Drimetolle/static-analysis",
  "publisher": "FireStarter",
  "engines": {
    "vscode": "^1.53.0"
  },
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp"
  ],
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/tests/utils/"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "antlr4ts": "cd src/grammar && antlr4ts CPP14Lexer.g4 CPP14Parser.g4",
    "cli-mode": "tsnd --respawn src/CLI.ts",
    "scan": "tsnd src/Scanner.ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "26.0.22",
    "@types/node": "12.12.0",
    "@types/ramda": "0.27.39",
    "@types/vscode": "1.34.0",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "26.5.4",
    "ts-node-dev": "1.1.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "antlr4ts": "0.5.0-alpha.4",
    "chalk": "2.4.2",
    "dotenv": "10.0.0",
    "ramda": "0.27.1",
    "reflect-metadata": "0.1.13",
    "tsyringe": "4.4.0"
  }
}
